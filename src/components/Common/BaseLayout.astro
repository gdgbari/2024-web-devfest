---
// Welcome to Astro! Everything between these triple-dash code fences

import Footer from "./Footer.astro";
import Navbar from "./Navbar.astro";
import PageHead from "./PageHead.astro";
import PageTitle from "./PageTitle.astro";
import { getLangFromUrl } from "../../i18n/utils";
import "../../style/base.css";

interface Props {
  pageTitle: string;
  pageUiTitle?: string;
  pageDescription?: string;
  navbarTrasparent?: boolean;
  subtitle?: string;
}

const { pageTitle, pageUiTitle, pageDescription, navbarTrasparent, subtitle } =
  Astro.props;

const lang = getLangFromUrl(Astro.url);
---

<!-- Below is your "component template." It's just HTML, but with
     some magic sprinkled in to help you build great templates. -->
<html lang={lang} class="scroll-smooth flex flex-col min-h-screen">
  <PageHead title={pageTitle} description={pageDescription} />

  <body class="flex-1 flex flex-col">
    <Navbar transparentMode={navbarTrasparent} />

    <main
      id="swup"
      class="main-content transition-fade flex flex-col items-stretch main-container px-4 pb-12 flex-1 "
      data-swup="0"
    >
      <PageTitle  title={pageUiTitle ?? pageTitle} subtitle={subtitle} />

      <slot />
    </main>

    <Footer />
  </body>
</html>
