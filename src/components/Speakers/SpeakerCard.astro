---
import { Image } from "astro:assets";
import { type Speaker } from "../../scripts/api/sessionize_api";

interface Props {
  speaker: Speaker;
}

const { speaker }: Props = Astro.props;

const words = speaker.bio ? speaker.bio.split(" ") : [];
let body = words.slice(0, 20).join(" ");

if (words.length > 15) {
  body += "...";
}
---

<a href={`/speakers/${speaker.slug}`} class="speaker-card">
  <figure>
    <Image
      class="rounded-none"
      src={speaker.profilePicture}
      alt={speaker.fullName}
      height={360}
      width={360}
    />
  </figure>
  <div class="card-body p-4">
    <p class="my-2 font-medium text-xl">{speaker.fullName}</p>
    <p class="max-h-12 text-ellipsis overflow-hidden">{speaker.tagLine}</p>
  </div>
</a>
